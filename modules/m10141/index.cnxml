      <rule type="proposition" id="rule1">
	<statement id="idm8249760">
	  <para id="rulepara1">
	    The noise projection coefficients
	    <m:math>
	      <m:ci>
		<m:msub>
		  <m:mi>η</m:mi>
		  <m:mi>n</m:mi>
		</m:msub>
	      </m:ci>
	    </m:math>'s are zero mean, Gaussian random variables and
	    are mutually independent if
	    <m:math>
	      <m:ci>
		<m:msub>
		  <m:mi>N</m:mi>
		  <m:mi>t</m:mi> 
		</m:msub>
	      </m:ci>
	    </m:math>

	    is a white Gaussian process.
	  </para>
	</statement>

	<proof id="idp2431232">
	  <para id="rulepara2">

