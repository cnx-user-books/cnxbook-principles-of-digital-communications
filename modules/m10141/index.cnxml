		    <m:cn>1</m:cn>
		  </m:lowlimit>
		  <m:uplimit>
		    <m:ci>N</m:ci>
		  </m:uplimit>
		  <m:apply>
		    <m:times/>
		    <m:ci>
		      <m:msub>
			<m:mi>s</m:mi>
			<m:mrow>
			<m:mi>m</m:mi>
			  <m:mi>n</m:mi>
			</m:mrow>
		      </m:msub>
		    </m:ci>
		    <m:apply>
